<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/grWelcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1483C2">

        <TextView
            android:id="@+id/wellcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_welcome"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/vector"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wellcome"
            />
        <ImageView
            android:id="@+id/snacker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/image3"
            android:paddingTop="50dp"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/backgroud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/group1000000728"
            app:layout_constraintTop_toBottomOf="@+id/wellcome"/>

        <ImageView
            android:id="@+id/pagerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/grproccse"
            android:paddingTop="580dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/logoNike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logonike"
            android:paddingTop="200dp"
            tools:ignore="MissingConstraints" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroud"
            android:background="@drawable/rounded"
            android:textColor="#2B2B2B"
            android:textAllCaps="false"
            android:text="@string/text_getStarted"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>